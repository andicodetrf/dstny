<%# <h1>Questions#index</h1> %>
<%# <p>Find me in app/views/questions/index.html.erb</p> %>

<% if !user_signed_in? %>
<div class ="jumb-bg text-center py-4">
		<div class="jumbotron jumb-anim">
			<h4 class="display-4">Sick of Decisions?</h4>

	<%# <hr class="my-4"> %>
			<p>Let us render your destiny today!</p>

		</div>

	    	<%= link_to "Sign Up", new_user_registration_path, class:"btn btn-outline-warning jumb-btn px-4" %> 
		
		<%#= link_to "Sign In", new_user_session_path, class:"btn btn-outline-warning px-4 jumb-btn" %> 
	</div>
	<% end %>
    

<div class="container mt-4">

	<div class="row row-cols-1 row-cols-md-2">
		<% @questions.each do |ques| %>

		<div class="col mb-6">
		<%# <%= link_to question_path(ques.id) do %> 
			<div class="card-index mb-2">
			
				<div class="card-header">
					<div class="row">
						<div class="col-md-8 text-left">
							<h5>
							<% if ques.user.avatar.attached? %>
							<%= image_tag ques.user.avatar, class: "def-img", height: 50 %>
							<% else %>
							<%= image_tag "/default_avatar.png",  height: 50, class:"def-ava" %>
							<% end %>
							<%= ques.user.username %> asks...
							</h5>
						</div>
						<div class="col-md-4 text-right">
							<%= link_to "VIEW", question_path(ques.id), class: "btn btn-outline-warning btn-sm px-3" %>
						</div>
					</div>
				</div>

				<div class="card-body">
				<%#= link_to question_path(ques.id) do %>

					<h6 class="card-title"><%= ques.question_text %></h6>
					
					<small class="card-text cat-index"> # <%= link_to ques.category.cat_type, category_path(ques.category.id) %> 
					</small> 
					<br>
					<small class="card-text">Expires: <%= ques.expiry_date.strftime('%d %b %Y, %I:%M%p') %></small>

				</div>

				 <div class="card-footer text-muted text-right">
				 <%#= link_to question_path(ques.id) do %>
    					<small> Posted: <%= (ques.created_at + 8.hours).strftime('%d %b %Y, %I:%M%p') %></small>
				<%# <%end%> 
  				</div>

					
			</div>
		</div>
		
		<% end %>

	</div>

</div>

