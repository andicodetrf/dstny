<div>
    <% @question.comments.each do |comment| %>
    <h4>Comment by <%= comment.user.username%></h4>
    <p class="comment"><%= comment.comment_text %></p>
    <% if comment.user_id == current_user.id %>
    <%= link_to  "Delete", [comment.question, comment], method: "delete", class: "btn btn-danger mb-2",data: { confirm: "Are you sure you want to delete this comment?"} %>
    <% end %>
    <p>Posted <%= time_ago_in_words(comment.created_at) %> ago.</p>
    <% end %>
</div>