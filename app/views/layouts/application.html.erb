                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li> %>
                <li class="nav-item">
                </li>
            </ul>
            <form action="/questions/search" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search_term" />
                <button class="btn btn-outline-success my-2 my-sm-0 mr-2" type="submit">
                    Search
                </button>
            </form>

            <%# Navbar ends %>
            <ul class="navbar-nav">

                <% if user_signed_in? %>
                <%#= current_user.email %>
                <li class="nav-item">
                    <%= link_to current_user.username, user_path(current_user), class:"nav-link ml-4 mr-2" %>
                </li>
                <li class="nav-item">
                    <% if user_signed_in? %>
                    <% if current_user.admin? %>
                    <%= link_to  "(Admin)", categories_path(@categories), class:"nav-link"%>
                    <% end %>
                    <% end %>
                </li>

                <%# <li class="nav-item"> %>
                    <%#= link_to "Log Out", destroy_user_session_path, method: :delete, class:"nav-link mx-2"%>
                <%# </li> %>

                <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="nav-item fa fa-sign-out fa-2x mt-1 ml-4 mr-2" id="signin" style="width: 30px; height: 30px;" data-toggle="tooltip" data-placement="bottom" title="Sign Out" aria-hidden="true"></i>
                <% end %>

                <% else %>
                <%# = link_to "sign up", new_user_registration_path
                <li class="nav-item">
                    <%= link_to "Sign In", new_user_session_path, class:"nav-link mx-2" %>
                    <%# <i class="fa fa-car"></i> %>
                    
                <%# </li> %>
                <%= link_to new_user_session_path do %>
                    <i class="nav-item fa fa-sign-in fa-2x mt-1 ml-4 mr-2" id="signin" style="width: 30px; height: 30px;" data-toggle="tooltip" data-placement="bottom" title="Sign In" aria-hidden="true"></i>
                <% end %>


            </ul>
        </div>

        <% end %>

    </nav>

