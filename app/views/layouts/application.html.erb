<!DOCTYPE html>
<html>

<head>
    <title>Dstny</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/faq256.png" type="image/png" >
</head>

<body>
    <% if notice %>
    <p class="notice alert alert-success" style="margin:0;"><%= notice %></p>
    <% end %>

    <% if alert %>
    <p class="alert alert alert-danger" style="margin:0;"><%= alert %></p>
    <% end %>

    <%# Navbar starts %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom">
   <%= link_to questions_path do %>
        <div class="navbar-brand">
            <img src="/faq256.png" width="30" height="30" alt="poll" loading="lazy"><span id="brand" class="pl-2">DSTNY</span>
        </div>
    <%end%>
    <%# <a class="navbar-brand" href="#">Navbar</a> %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <%= link_to  "Polls", questions_path, class:"nav-link"%>
                </li>
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to  "New Poll", new_question_path, class:"nav-link"%>
                    </li>
                <% end %>
                <li class="nav-item">
                    <%= link_to  "Categories", categories_path(@categories), class:"nav-link"%>
                </li>
                <%# <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
